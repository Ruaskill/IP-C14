         <top>
            <HBox style="-fx-background-color: #2B2828;" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="homeButton" mnemonicParsing="false" onAction="#homeButtonClicked" style="-fx-background-color: #2B2828;" text="Home" textFill="WHITE">
