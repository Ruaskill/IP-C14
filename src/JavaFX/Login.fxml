                     </children>
                  </HBox>
                  <Region layoutX="10.0" layoutY="245.0" prefHeight="40.0" prefWidth="200.0" />
                  <PasswordField fx:id="passwordField" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="40.0" prefWidth="300.0" promptText="Password">
