<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.CreateAccountController">
   <children>
      <BorderPane prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <top>
            <HBox style="-fx-background-color: #2B2828;" BorderPane.alignment="CENTER">
               <children>
                  <MenuButton mnemonicParsing="false" prefHeight="40.0" style="-fx-background-color: #2B2828;" text="Menu" textFill="WHITE">
                    <items>
                      <MenuItem mnemonicParsing="false" text="Action 1" />
                      <MenuItem mnemonicParsing="false" text="Action 2" />
                    </items>
                  </MenuButton>
               </children>
            </HBox>
         </top>
         <center>
             <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="BOTTOM_CENTER">
                 <padding>
                     <Insets top="120.0" />
                 </padding>
                 <Text fill="#2b2828" strokeType="OUTSIDE" strokeWidth="0.0" text="Create Account" VBox.vgrow="ALWAYS">
                    <font>
                        <Font name="Book Antiqua" size="58.0" />
                    </font>
                 </Text>
                 <Region prefHeight="60.0" />
                 <HBox alignment="TOP_CENTER" spacing="30.0">
                    <children>
                        <TextField fx:id="firstName" prefHeight="40.0" prefWidth="300.0" promptText="First Name">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </TextField>
                        <TextField fx:id="lastName" prefHeight="40.0" prefWidth="300.0" promptText="Last Name">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </TextField>
                    </children>
                 </HBox>
                 <Region prefHeight="30.0" prefWidth="200.0" />
                 <TextField fx:id="userName" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="40.0" prefWidth="300.0" promptText="Username">
                    <font>
                        <Font size="14.0" />
                    </font>
                 </TextField>
                 <Region layoutX="10.0" layoutY="198.0" prefHeight="30.0" prefWidth="200.0" />
                 <TextField fx:id="email" layoutX="10.0" layoutY="218.0" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="40.0" prefWidth="300.0" promptText="Email">
                    <font>
                        <Font size="14.0" />
                    </font>
                 </TextField>
                 <Region layoutX="10.0" layoutY="240.0" prefHeight="30.0" prefWidth="200.0" />
               <PasswordField fx:id="password" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="40.0" prefWidth="300.0" promptText="Password">
                  <font>
                     <Font size="14.0" />
                  </font>
               </PasswordField>
               <Region layoutX="10.0" layoutY="345.0" prefHeight="30.0" prefWidth="200.0" />
               <PasswordField fx:id="confirmPassword" layoutX="160.0" layoutY="290.0" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="40.0" prefWidth="300.0" promptText="Confirm Password">
                  <font>
                     <Font size="14.0" />
                  </font>
               </PasswordField>
               <Region layoutX="10.0" layoutY="320.0" prefHeight="30.0" prefWidth="200.0" />
                 <ComboBox fx:id="comboBox" prefHeight="40.0" prefWidth="300.0" promptText="Account Type" style="-fx-background-color: #2B2828;" stylesheets="@CreateAccount.css" />
                 <Region layoutX="10.0" layoutY="305.0" prefHeight="60.0" prefWidth="200.0" />
                 <Button fx:id="createAccountButton" mnemonicParsing="false" onAction="#createAccountButtonClicked" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #2B2828;" text="Create Account" textFill="WHITE">
                    <font>
                        <Font size="14.0" />
                    </font>
                 </Button>
               <Region layoutX="10.0" layoutY="345.0" prefHeight="30.0" prefWidth="200.0" />
               <Text fx:id="outputText" fill="#2b2828" strokeType="OUTSIDE" strokeWidth="0.0" textAlignment="CENTER">
                  <font>
                     <Font size="15.0" />
                  </font>
               </Text>
             </VBox>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
